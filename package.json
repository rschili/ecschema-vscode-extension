{
	"name": "ecschema-vscode-extension",
	"displayName": "ecschema vscode extension",
	"description": "Extension for ECSchema grammar",
	"version": "0.0.1",
	"publisher": "rschili",
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/rschili/ecschema-vscode-extension"
	},
	"engines": {
		"vscode": "^1.98.2"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:ecschema",
		"workspaceContains:**/*.ecschema.xml"
	],
	"main": "./client/out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "ecschema",
				"aliases": [
					"ECSchema",
					"ecschema"
				],
				"extensions": [
					".ecschema.xml"
				]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"postinstall": "cd client && npm install && cd ../server && dotnet restore && cd .."
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^20",
		"@types/vscode": "^1.73.0",
		"eslint": "^9.13.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0"
	},
	"extensionDependencies": [
    	"ms-dotnettools.vscode-dotnet-runtime"
  	]
}
